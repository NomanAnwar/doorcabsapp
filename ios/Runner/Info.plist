<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>CFBundleDevelopmentRegion</key>
		<string>$(DEVELOPMENT_LANGUAGE)</string>
		<key>CFBundleDisplayName</key>
		<string>Doorcab</string>
		<key>CFBundleExecutable</key>
		<string>$(EXECUTABLE_NAME)</string>
		<key>CFBundleIdentifier</key>
		<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
		<key>CFBundleInfoDictionaryVersion</key>
		<string>6.0</string>
		<key>CFBundleName</key>
		<string>doorcab</string>
		<key>CFBundlePackageType</key>
		<string>APPL</string>
		<key>CFBundleShortVersionString</key>
		<string>$(FLUTTER_BUILD_NAME)</string>
		<key>CFBundleSignature</key>
		<string>????</string>
		<key>CFBundleVersion</key>
		<string>$(FLUTTER_BUILD_NUMBER)</string>
		<key>LSRequiresIPhoneOS</key>
		<true/>
		<key>UILaunchStoryboardName</key>
		<string>LaunchScreen</string>
		<key>UIMainStoryboardFile</key>
		<string>Main</string>
		<!-- iPhone orientations -->
		<key>UISupportedInterfaceOrientations</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<!-- iPad orientations -->
		<key>UISupportedInterfaceOrientations~ipad</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationPortraitUpsideDown</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<key>CADisableMinimumFrameDurationOnPhone</key>
		<true/>
		<key>UIApplicationSupportsIndirectInputEvents</key>
		<true/>
		<!-- Background fetch/notification -->
		<key>UIBackgroundModes</key>
		<array>
			<string>fetch</string>
			<string>remote-notification</string>
		</array>
		<!-- Debug / Dev -->
		<key>NSLocalNetworkUsageDescription</key>
		<string>This app uses the local network to connect to the Flutter debugger during development.</string>
		<key>NSBonjourServices</key>
		<array>
			<string>_dartobservatory._tcp</string>
		</array>
		<!-- Permissions -->
		<key>NSCameraUsageDescription</key>
		<string>This app needs access to the camera to take profile pictures.</string>
		<key>NSPhotoLibraryUsageDescription</key>
		<string>This app needs access to the photo library to pick profile pictures.</string>
		<key>NSPhotoLibraryAddUsageDescription</key>
		<string>This app needs access to save images to your photo library.</string>
		<!-- Location permissions -->
		<key>NSLocationWhenInUseUsageDescription</key>
		<string>This app needs your location to show nearby rides.</string>
		<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
		<string>This app needs your location to show nearby rides.</string>
		<!-- Extra for older iOS versions -->
		<key>NSLocationAlwaysUsageDescription</key>
		<string>This app needs access to your location even in the background.</string>
		<!-- iOS 14+ temporary accuracy -->
		<key>NSLocationTemporaryUsageDescriptionDictionary</key>
		<dict>
			<key>Default</key>
			<string>This app uses your precise location to provide accurate pickup and dropoff locations.</string>
		</dict>
		<!-- Optional: API key (only if I prefer to configure via Info.plist) -->
		<!--
        <key>GMSApiKey</key>
        <string>AIzaSyDSM07TyIXQ4Xo_aDPpQImkn9iyX0eAMGE</string>
        -->
		<!-- Push Notifications Permission - ADDED -->
		<key>NSUserNotificationUsageDescription</key>
		<string>This app needs to send you notifications about ride requests and driver updates.</string>
		<!-- Firebase Configuration (if using Firebase Cloud Messaging) - ADDED -->
		<key>FirebaseAppDelegateProxyEnabled</key>
		<false/>
		<!-- APS Environment (Push Notifications) - ADDED -->
		<key>aps-environment</key>
		<string>development</string>
		<!-- Change to 'production' for App Store releases -->
		<key>UIStatusBarHidden</key>
		<false/>
        <key>UIBackgroundModes</key>
        <array>
            <string>fetch</string>
            <string>remote-notification</string>
            <!-- ADD THIS FOR BACKGROUND PUSHER -->
            <string>audio</string>
        </array>
	</dict>
</plist>
